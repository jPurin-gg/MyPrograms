{
	// なんでもよい
  "name": "ensyu",

  // 使用するDockerfileを指定（"Dockerfile" という名前の場合）
  "dockerFile": "Dockerfile",

  // ポート8080をローカルマシンに転送
  "forwardPorts": [8080],

  // コンテナ内での作業ディレクトリ
  // "workspaceFolder": "/workspaces/MyPrograms/技大/B3_2学期/情報システム工学演習/Web開発/05_servlet",
  "workspaceFolder": "/usr/local/tomcat#",

  // ホストの作業フォルダをコンテナ内のwebapps/hogeにマウント
  // /hogeは好きな名称にしてください
  "mounts": [
    "source=${localWorkspaceFolder},target=/usr/local/tomcat/webapps/TestWebs,type=bind,consistency=cached"
  ],

  // VSCode用のカスタマイズ設定
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack", // Java開発用の拡張機能パック
        "redhat.java", // Java Language Support
        "vscjava.vscode-maven", // Mavenサポート
        "GabrielBB.vscode-lombok" // Lombokサポート
      ]
    }
  }
}
